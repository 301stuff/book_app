<!DOCTYPE html>
<html lang="en">
<head>
<%- include('../layout/head') %>
</head>
<body>
    <header>
        <%- include('../layout/header') %>

    </header>
   <main>  
     <h2>Saved books <%=  booksDb.length %></h2>   
        <ul>
            <% booksDb.forEach(item => { %>
                <img src="<%= item.image %>" alt="book cover image">
                <p>Title: <%= item.title %></p>
                <p>Author: <%= item.author %></p>
                <!-- <p class="descpription">Description: <%= item.description %></p> -->
                <button class="viewdetails" name="<%= item.id %>">View Details</button>
            <% }) %>
        </ul>
    </main>  
    <footer>
        <%- include('../layout/footer') %>

    </footer>
</body>
</html>
