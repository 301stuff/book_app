<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../layout/head') %>
</head>
<body>
    <header>
        <%- include('../../layout/header') %>
    </header>
   <main>     
        <ul>
            <% searchResults.forEach(item => { %>
                <img src="<%= item.image %>" alt="book cover image">
                <p>Title: <%= item.title %></p>
                <p>Author: <%= item.author %></p>
                <p class="descpription">Description: <%= item.description %></p>
                <button class="viewDetailsButton" name="<%= item.id %>" >Select</button>
                <div  class="DetailFormDiv hidden">
                    
                    <form class="DetailForm" action="/books" method="POST">
                        <label>Title:
                            <input class="DetailForm" type="text" name="EditForm" value="<%= item.title %>" required>
                        </label>
                        <label> Author:
                            <input class="DetailForm" type="text" name="EditForm" value="<%= item.author %>" required>
                        </label>
                        <label>Description:
                            <input class="DetailForm" type="text" name="EditForm" value="<%= item.description %>" required>
                        </label>
                        <label>ISBN:
                            <input class="DetailForm" type="text" name="EditForm" value="<%= item.isbn %>" required>
                        </label>
                        <label>Bookshelf:
                            <input class="DetailForm" type="text" name="EditForm" value="<%= item.bookshelf %>" required>
                        </label>
                        <label>Image URL:
                            <input class="DetailForm" type="text" name="EditForm" value="<%= item.image %>">
                        </label>
                        <button>Save to Database</button>
                    </form>
                </div>
            <% }) %>
        </ul>
    </main>  
    <footer>
        <%- include('../../layout/footer') %>
    </footer>
</body>
</html>